{
  "manifest_version": 3,
  "name": "Productivity Blocker",
  "version": "1.0",
  "description": "A simple Chrome extension that allows one to block time wasting websites for specific periods of the day.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Site Blocker",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "build/**"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}